{
    "id": "codex-cli",
    "version": "1.1.7",
    "name": "Codex CLI",
    "description": "Installs OpenAI Codex CLI with API key support",
    "postCreateCommand": "/usr/local/codex-cli/setup.sh",
    "options": {
        "OPENAI_API_KEY": {
            "type": "string",
            "description": "OpenAI API Key",
            "default": ""
        },
        "VERSION": {
            "type": "string",
            "description": "Codex CLI version",
            "default": "latest"
        }
    }
}
